@using AlexaUITech.Models
@model ApplicationDetail
@{
    ViewBag.Title = "Index";
}
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 6px 15px;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 12px;
    }

    tr:nth-child(odd) {
        /*background-color: #f2f2f2;*/
    }
</style>

<link href="~/Content/Main.css" rel="stylesheet" />

@using (Html.BeginForm("Index", "Menu", FormMethod.Post))
{
    <br />
    <br />
    <div class="div1">
        <table>
            <div class="heading">
                <h4 style="padding-top: 3px;">Application Details</h4>
            </div>
            <center>
                <h4>

                    @Html.LabelFor(m => m.ApplicationId, "Application No.")

                    @Html.TextBoxFor(m => m.ApplicationId, new { @class = "FancyTextBox" })

                    <input type="submit" id="btnSearch" name="Search" value="Search" class="FancyButton" />

                </h4>
            </center>

            <tr>
                <th>
                    @Html.LabelFor(m => m.Channel)
                </th>
                <th>
                    @Html.LabelFor(m => m.LoanCurrency, "Loan Currency")
                </th>
                <th>
                    @Html.LabelFor(m => m.ApplicationDate, "Application Date")
                </th>
                <th>
                    @Html.LabelFor(m => m.Status)
                </th>
            </tr>
            <tr>
                <td>
                    @Html.TextBoxFor(m => m.Channel, new { @class = "FancyTextBox" })

                </td>
                <td>
                    @Html.TextBoxFor(m => m.LoanCurrency, new { @class = "FancyTextBox" })

                </td>
                <td>
                    @Html.TextBoxFor(m => m.ApplicationDate, new { @class = "FancyTextBox" })

                </td>
                <td>
                    @Html.TextBoxFor(m => m.Status, new { @class = "FancyTextBox" })

                </td>
            </tr>

            <tr>

                <th>
                    @Html.LabelFor(m => m.RequestedAmount, "Requested Amount")
                </th>
                <th>
                    @Html.LabelFor(m => m.Product)
                </th>
                <th>
                    @Html.LabelFor(m => m.InterestRate, "Interest Rate")
                </th>
                <th>
                    @Html.LabelFor(m => m.Association)
                </th>
            </tr>
            <tr>

                <td>
                    @Html.TextBoxFor(m => m.RequestedAmount, new { @class = "FancyTextBox" })

                </td>
                <td>
                    @Html.TextBoxFor(m => m.Product, new { @class = "FancyTextBox" })

                </td>
                <td>
                    @Html.TextBoxFor(m => m.InterestRate, new { @class = "FancyTextBox" })

                </td>
                <td>
                    @Html.TextBoxFor(m => m.Association, new { @class = "FancyTextBox" })

                </td>
            </tr>


            <tr>

                <th>
                    @Html.LabelFor(m => m.LoanOfficer, "Loan Officer")
                </th>
                <th>
                    @Html.LabelFor(m => m.Tenure)
                </th>
                <th>
                    @Html.LabelFor(m => m.SalesAgent, "Sales Agent")
                </th>
            </tr>
            <tr>

                <td>
                    @Html.TextBoxFor(m => m.LoanOfficer, new { @class = "FancyTextBox" })

                </td>
                <td>
                    @Html.TextBoxFor(m => m.Tenure, new { @class = "FancyTextBox" })

                </td>
                <td>
                    @Html.TextBoxFor(m => m.SalesAgent, new { @class = "FancyTextBox" })

                </td>
            </tr>

        </table>

        <p style="padding-right:70px" align="right">
            @*<input type="button" id="btnEdit" value="Edit" class="FancyButton" />*@
            <input type="submit" id="btnUpdate" name="Update" value="Update" class="FancyButton" />

        </p>
        @Html.Raw(TempData["msg"])
        <br />
    </div>
}
